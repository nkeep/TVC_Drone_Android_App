<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlling">


    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystick"
        android:layout_width="355dp"
        android:layout_height="355dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="27dp"
        app:JV_backgroundColor="#009688"
        app:JV_borderColor="#00796B"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#FF6E40"
        app:JV_fixedCenter="false" />

    <Button
        android:id="@+id/raise"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="57dp"
        android:text="Raise" />

    <Button
        android:id="@+id/lower"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="112dp"
        android:text="Lower" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="187dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="292dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Controller"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/takeOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="344dp"
        android:layout_marginBottom="21dp"
        android:text="Take Off" />

    <TextView
        android:id="@+id/joystickVals"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/takeOff"
        android:layout_marginStart="344dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"
        android:text="joyStick Vals"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/accelValues"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="348dp"
        android:layout_marginLeft="348dp"
        android:layout_marginTop="70dp"
        android:text="X:\nY:"
        android:textSize="20sp" />

</RelativeLayout>